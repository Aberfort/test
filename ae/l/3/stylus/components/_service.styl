.service
	&__title
		border-bottom 1px solid #d7d7d7
		&:nth-child(2n+1)
			border-right 1px solid #d7d7d7
		&:nth-child(1n+9)
			border-bottom 1px solid transparent
		@media screen and (max-width: 991px)
			border none !important
	&__case
		color main
		font-weight 500
		padding 25px 0
		text-align left
		@media screen and (max-width: 991px)
			margin-left 20%
			padding 10px 0
		&:before
			content ""
			display inline-block
			position relative
			width 42px
			height 29px
			background-image url("../img/sys/service.svg")
			background-position 50% 50%
			background-size contain
			background-repeat no-repeat
			margin-right 50px
			margin-left 50px
			margin-bottom -10px
			@media screen and (max-width: 991px)
				margin 0 10px
				height 16px
				width 16px
				position absolute
				left 5%
	&_call
		background-color #323337
		padding 60px 0
		margin-top 150px
		.title
			font-size 1.750em
			color main
		.desc
			font-size 1.125em
			color white
			font-weight 500
		@media screen and (max-width: 991px)
			margin-top pad