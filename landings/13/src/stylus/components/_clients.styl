.clients
	h3
		margin-bottom: 50px
		@media screen and (max-width: 767px)
			margin-bottom: 40px

	&__techs
		margin-bottom: 45px
		@media screen and (max-width: 1023px)
			height: 30px

	&__tech
		width: calc(100% / 4)
		float: left
		height: 30px
		background-position: 50% 50%
		background-size: contain
		background-repeat: no-repeat
		position: relative
		z-index: 2
		&:nth-child(1)
			background-image: url('../img/sys/tech_1.svg')
		&:nth-child(2)
			background-image: url('../img/sys/tech_2.svg')
		&:nth-child(3)
			background-image: url('../img/sys/tech_3.svg')
		&:nth-child(4)
			background-image: url('../img/sys/tech_4.svg')

	&__linked
		padding-top: 70px
		@media screen and (max-width: 767px)
			padding-top: 40px

	&__desc
		font-size: 0.875em
		color #181818
		font-weight: 400
		line-height: 25px
		text-align: center
		width: 90%
		margin: 0 auto
		@media screen and (max-width: 767px)
			font-size: 1em
			line-height: 25px
			font-weight: 400
			width: 100%

	&__image
		height: 65px
		background-position: 50% 50%
		background-repeat: no-repeat
		background-size: contain
		@media screen and (max-width: 767px)
			margin-bottom: 30px
		&:nth-child(1)
			background-image: url('../img/sys/harley.svg')
		&:nth-child(2)
			background-image: url('../img/sys/universal.svg')
		&:nth-child(3)
			background-image: url('../img/sys/jaguar.svg')
		&:nth-child(4)
			background-image: url('../img/sys/guinness.svg')