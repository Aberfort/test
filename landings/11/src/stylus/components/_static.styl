.static
	background: url('../img/sys/static_1.jpg') 50% 0 no-repeat fixed
	background-size: cover
	@media screen and (max-width: 1024px)
		background-attachment: inherit
	@media screen and (max-width: 767px)
		padding: 40px 0

	&--first
		background-image: url('../img/sys/static_1.jpg')
	&--second
		background-image: url('../img/sys/static_2.jpg')
	&--third
		background-image: url('../img/sys/static_3.jpg')
	&--fourth
		background-image: url('../img/sys/static_4.jpg')

	&--rating
		@media screen and (max-width: 767px)
			display: none

	&__logo
		width: 165px
		height: 40px
		margin: 0 auto
		margin-bottom: 20px
		background-position: 50% 50%
		background-size: contain
		background-repeat: no-repeat

	&__title
		font-size: 1.688em
		margin-bottom: 35px
		@media screen and (max-width: 767px)
			font-size: 1.286em

	&__item
		text-align: center
		color: white
		&:nth-child(1)
			.static__logo
				background-image: url('../img/sys/static_1.png')
			
			&:after
				content: ''
				display: block
				position: absolute
				right: 0
				top: 50%
				transform translate(1px,-20%)
				width: 2px
				height: 74px
				background-color: white
				@media screen and (max-width: 767px)
					display: none
		&:nth-child(2)
			.static__logo
				background-image: url('../img/sys/static_2.png')

	&--comments
		padding-top: 40px
		@media screen and (max-width: 767px)
			padding: 30px 0

		.static__logo
			margin-bottom: 5px

		.static__subtitle
			font-size: 0.875em
			color #cacaca
			font-weight: 500
			@media screen and (max-width: 767px)
				font-size: 1em
				font-weight: 400
			&:after
				content: ''
				display: block
				position: relative
				width: 30px
				height: 21px
				background-image: url('../img/sys/quote.svg')
				background-position: 50% 50%
				background-size: contain
				background-repeat: no-repeat
				margin: 20px auto

		.static__desc
			width: 60%
			margin: 0 auto
			@media screen and (max-width: 1023px)
				width: 90%
			@media screen and (max-width: 767px)
				width: 100%


		.static__item
			&:nth-child(1)
				.static__logo
					background-image: url('../img/sys/cirrus.svg')
			&:nth-child(2)
				.static__logo
					background-image: url('../img/sys/eurostar.svg')
