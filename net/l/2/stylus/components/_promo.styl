.promo
	background-image url('../img/sys/promo_bg.jpg')
	background-size cover
	background-position 50% 50%
	position relative
	color #fff
	&__menu
		float right
		width 45px
		height 45px
		background-image url('../img/sys/menu.svg')
		a
			display block
			height 100%
			width 100%
			z-index 10
			cursor pointer
		&.active
			z-index 205
			background-image url('../img/sys/menu_c.svg')
	.fixed
		position fixed
		margin 0 auto
		left 0
		right 0
		z-index 205
	&__logo
		text-align left
		&.active
			z-index 200
	&__center
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		@media screen and (max-width: 991px)
			position relative
			left auto
			right auto
			transform none
	&__title
		padding-top 115px
		text-align center
		text-transform uppercase
		font-size 2.500em
		line-height 1.5
		font-weight 300
		letter-spacing 5px
		span
			font-weight 700
		@media screen and (max-width: 991px)
			padding-top 80px
			line-height 30px
			font-size 20px
			letter-spacing 0
	&__text
		padding-top 55px
		text-align center
		font-size 1.375em
		font-weight 300
		@media screen and (max-width: 991px)
			line-height 30px
	&__call
		text-align center
		padding-top 55px
		@media screen and (min-width: 1440px)
				padding-top 105px
		.arrow
			display block
			margin 0 auto
			margin-top 76px
			@media screen and (max-width: 991px)
				margin 30px 0
			@media screen and (min-width: 1440px)
				margin-top 120px