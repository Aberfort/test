.work
	&__tabs
		width 100%
	&__tab
		width 20%
		float left
		text-align center
		@media screen and (max-width: 991px)
			width 90%
			margin-left 5%
			margin-bottom 40px
		.title
			color main
			font-weight 500
			font-size 1.125em
		.image
			width 100%
			height 170px
			background-position 50% 50%
			background-repeat no-repeat
			border-bottom 1px solid #eadfc7
			@media screen and (max-width: 991px)
				height 120px
		.description
			margin-top -1px
			border-top 1px solid transparent
			text-align left
			transition all 0.4s
			padding 26px 15px 0 15px
			font-size 0.875em
			@media screen and (max-width: 991px)
				text-align center
		&:hover
			.description
				border-top 1px solid main
	.button
		display block
		margin 0 auto
		margin-top 40px
		@media screen and (max-width: 991px)
			margin-top 0
			