.weare
	position relative
	background-color #f5f5f5
	@media screen and (max-height 750px)
		padding-bottom 40px
	p.title
		text-align center
		font-size 1.625em
		padding-top 65px
		padding-bottom 35px
	p.name
		font-weight 800
		text-transform uppercase
		padding 38px 0
		&--weare1
			&:before
				content ""
				display block
				background url("../img/sys/weare_1.svg") no-repeat
				background-position 50% 50%
				width 34px
				height 24px
				float left
				margin 0 33px 0 0
				@media screen and (max-width: 991px)
					position absolute
					top 0
					left 50%
					transform translateX(-50%)
		&--weare2
			&:before
				content ""
				display block
				background url("../img/sys/weare_2.svg") no-repeat
				background-position 50% 50%
				width 32px
				height 34px
				float left
				margin -4px 33px 0 0
				@media screen and (max-width: 991px)
					position absolute
					top 0
					left 50%
					transform translateX(-50%)
		&--weare3
			&:before
				content ""
				display block
				background url("../img/sys/weare_3.svg") no-repeat
				background-position 50% 50%
				width 34px
				height 30px
				float left
				margin -4px 33px 0 0
				@media screen and (max-width: 991px)
					position absolute
					top 0
					left 50%
					transform translateX(-50%)
	a
		display block
		color #97743a
		transition all 0.4s
		padding-bottom 2px
	p.country
		font-size 0.750em
		color #97743a
		font-weight 800
		padding-top 45px
		padding-bottom 6px
	p.adress
		font-weight 500
	p.main
		font-weight 500
		line-height 1.7
	a.button
		margin-top 80px
		@media screen and (max-width: 991px)
			margin 30px auto
	&__block
		position relative
		@media screen and (max-width: 991px)
			margin-bottom 30px
	&__contacts
		padding-top 38px