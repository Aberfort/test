.promo
	background-image url('../img//promo.jpg')
	background-size cover
	background-position 50% 50%
	position relative
	margin-bottom pad
	color #fff
	padding-top 20px
	padding-bottom: 170px
	&__menu
		float right
		width 45px
		height 45px
		background-image url('../img/sys/menu.svg')
		a
			display block
			height 100%
			width 100%
			z-index 10
			cursor pointer
		&.active
			z-index 205
			background-image url('../img/sys/menu_c.svg')
	.fixed
		display none
		position fixed
		margin 0 auto
		left 0
		right 0
		z-index 205
		@media screen and (max-width: 1260px)
			display block
	&__logo
		text-align left
		background-image: url('../img/logo.svg')
		background-repeat: no-repeat
		background-size: contain
		height: 44px
		opacity: 0
		&.active
			z-index 200
	&__navigation
		height 44px
		text-transform uppercase
		vertical-align middle
		text-align right
		font-size 0.750em
		@media screen and (max-width: 1260px)
			display none
		li
			display inline-block
			padding-left 22px
			letter-spacing 2px
			line-height 50px
		a
			display block
			font-size: 0.875em
			letter-spacing 2.4px
			font-weight 500
			color white
			&:after
				content ""
				margin-top -10px
				display block
				position relative
				width 0px
				height 3px
				background-color white
				transition all 0.4s
			&:hover
				&:after
					width 40px
			&.email
				margin-left 46px
				border 2px solid white
				background-color: transparent
				border-radius 3px
				padding: 0 20px 8px 20px
				transition: all 0.2s
				line-height: 40px
				&:hover
					background-color #3ba3f8
					border-color #3ba3f8
					&:after
						width 0px
	&__center
		@media screen and (max-width: 991px)
			position relative
			left auto
			right auto
			transform none
	&__bg
		height: 600px
		background-image: url('../img/logo-bg.png')
		background-repeat: no-repeat
		background-position: 0 40%
		background-size: 250px
	&__title
		padding-top 200px
		text-transform uppercase
		font-size 2.125em
		font-weight 300
		line-height 48px
		letter-spacing 2.6px
		@media screen and (max-width: 991px)
			padding-top 80px
			line-height 30px
			font-size 20px
			letter-spacing 0
		p
			font-size: 17px
			font-weight: 500
			letter-spacing: 0.89px
			line-height: 30px
			margin-bottom: 10px
	&__text
		padding-top 20px
		font-size 17px
		font-weight 400
		line-height: 24px
		letter-spacing 0.7px
		@media screen and (max-width: 991px)
			line-height 30px
	&__call
		padding-top 62px
		margin-bottom 55px
	&__tags
		padding 35px 0
		border-top 1px solid #fff
		border-bottom 1px solid #fff
		&:before
			content "We are"
			position absolute
			left -110px
			top 60px
			text-transform uppercase
			transform rotate(-90deg)
			font-size 0.750em
			letter-spacing 5px
	&__tag
		width 32%
		display inline-block
		padding-left 8.6%
		font-weight 500
		font-size 1.1em
		line-height 1.5
		&:after
			content ""
			width 40px
			height 3px
			background-color white
			display block
			margin-top 20px
			position relative
		@media screen and (max-width: 991px)
			width 90%
			padding-left 0
			&:after
				margin 10px auto 20px auto
	&__stick
		position absolute
		margin 0 auto
		left 0
		right 0
		z-index 200
		&--js
			top -130px
			position fixed
			z-index 100
			transition all 0.6s
			margin-top 130px
			padding 12px 0 20px 0
			background-color white
			border-bottom 1px solid #aeaeae
			a
				color black
				&:after
					background-color black
				&.email
					border-color: #3ba3f8
					&:hover
						color: white
			.cls-2
				fill black
			.promo__logo
				opacity: 1