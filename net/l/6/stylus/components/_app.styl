.app
	&__tabs
		width 100%
		position relative
		z-index 1
		margin-bottom: 60px
		@media screen and (max-width: 991px)
			display none
	&__tab
		width calc(100% / 3 - 1px)
		float left
		text-align center
		position relative
		.platform
			padding-top 26px
			color #9e9e9e
			font-weight 500
			padding-bottom 30px
			span
				border 1px solid transparent
				border-radius 100px
				padding: 15px 30px
				background: #fff
				transition all 0.2s
		&:hover
			.platform
				color: #000
				span
					border-color: #bdbdbd
		&--active
			.platform
				color: #000
				span
					border-color: #bdbdbd
	&__carousel
		overflow hidden
		@media screen and (max-width: 991px)
				padding 20px 0 0 0
		.owl-controls
			display none
			@media screen and (max-width: 991px)
				display block
				margin-bottom pad

	&__case
		height 350px
		position relative
		color: #000000
		.platform
			display none
		.image
			display none
		@media screen and (max-width: 991px)
			background-color white
			height auto
			.image
				display block
				width 100%
				height 80px
				background-position 50% 50%
				background-repeat no-repeat
				transition all 0.4s
			.platform
				display block
				padding-top 26px
				color main
				transition all 0.4s
				font-weight 700
				padding-bottom 30px
				&:before
					content ""
					width 40px
					height 3px
					top 80px
					left 50%
					position absolute
					display block
					margin-left -20px
					background-color main
	&__content
		font-weight 500
		&--text
			@media screen and (max-width: 991px)
				position relative
				transform none
				left auto
			.title
				font-size 2.813em
				font-weight 300
				letter-spacing -0.4px
				line-height 60px
				margin-bottom: 40px
				@media screen and (max-width: 991px)
					color black
					margin-bottom 30px
			.desc
				font-size 1.500em
				font-weight 300
				letter-spacing 0.2px
				line-height 36px
				@media screen and (max-width: 991px)
					color black
					padding-bottom 20px
		.opened
			&:after
				transform rotate(90deg)
	&_call
		background-color #323337
		padding 60px 0
		.title
			font-size 1.750em
			color main
		.desc
			font-size 1.125em
			color white
			font-weight 500
		