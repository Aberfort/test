.testimonials
	position relative
	@media screen and (max-width: 991px)
		display none
	p.title
		text-align center
		font-size 1.625em
		padding-top 65px
		padding-bottom 85px
	&__comment
		text-align center
		padding 0 40px
		p.main
			font-weight 500
			line-height 1.7
			text-align center
			&:before
				content ''
				display block
				position absolute
				left 50%
				transform translate(-50%, -130%)
				background url("../img/sys/comment.svg") no-repeat
				background-position 50% 50%
				background-size contain
				width 34px
				height 26px
				float left
				margin -4px 20px 0 0px
		p.name
			font-size 1em
			color #97743a
			font-weight 800
			padding-top 40px
			padding-bottom 80px
	&__logo
		width 100%
		height 100px
		background-repeat no-repeat
		background-position 50% 100%