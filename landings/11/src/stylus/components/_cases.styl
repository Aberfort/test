.cases
	padding-bottom: 0
	@media screen and (max-width: 1023px)
		margin-bottom: 100px
	@media screen and (max-width: 767px)
		margin-bottom: 70px

	.flickity-page-dots
		bottom: 50px
		@media screen and (max-width: 1023px)
			bottom: -50px
		@media screen and (max-width: 767px)
			bottom: -25px

	.flickity-page-dots .dot.is-selected
		background: main

	.flickity-prev-next-button
		background: #f57f17
		.arrow
			fill: #fff
		@media screen and (max-width: 767px)
			display: none

	.flickity-prev-next-button.previous
		@media screen and (min-width: 1280px)
			left: calc(50% - 630px)

	.flickity-prev-next-button.next
		@media screen and (min-width: 1280px)
			right: calc(50% - 630px)

	h3
		margin-bottom: 55px

	&__item
		width: 100%
		height: 700px
		background-position: 50% 50%
		background-size: cover
		background-repeat: no-repeat
		padding-top: 20px
		@media screen and (max-width: 1023px)
			height: auto

	&__slides
		display: block
		height: 450px
		margin-top: 0px
		@media screen and (max-width: 1023px)
			height: 300px
			margin-top: 0

	&__slide
		height: 300px
		width: 100%
		background-size: contain
		background-position: 50% 0
		background-repeat: no-repeat
		left: 0
		position: absolute
		transition all 0.8s
		@media screen and (max-width: 1023px)
			width: 300px
			//left: 50%
			margin-left: -150px
		&:nth-child(1)
			z-index: 3
			top: 0px
			transform: translateY(-200%)
			transition-delay: 0.6s
			width: 100%;
			height: 100%;
			margin: auto
		&--js
			transform: translateY(0) !important

	&__title
		margin-top: 0px
		font-size: 1.875em
		font-weight: 800
		text-transform: uppercase
		color #181818
		margin-bottom: 2px
		@media screen and (max-width: 1023px)
			margin-top: 30px
			text-align: center
		@media screen and (max-width: 767px)
			margin-top: 10px

	&__subtitle
		font-size: 0.875em
		font-weight: 500
		color #393939
		line-height: 25px
		margin-bottom: 28px
		@media screen and (max-width: 1023px)
			text-align: center

	&__solution
		font-size: 1.125em
		font-weight: 700
		color #181818
		text-transform: uppercase
		margin-bottom: 20px
		@media screen and (max-width: 1023px)
			display: none
		&:after
			content: ''
			display: block
			position: relative
			left: 0
			height: 3px
			width: 40px
			background: main
			margin-top: 8px

	&__desc
		font-size: 0.875em
		color #393939
		line-height: 25px
		width: 80%
		margin-bottom: 26px
		@media screen and (max-width: 1023px)
			display: none

	&__list
		width: auto
		float: left
		margin-right: 50px
		@media screen and (max-width: 1023px)
			display: none
		ul
			list-style: inherit
			padding-left: 30px
			li
				margin-right: 10px
				font-size: 0.875em
				color #393939
				line-height: 20px
				margin-bottom: 6px
	&__listhead
		font-size: 1.125em
		font-weight: 700
		color #181818
		margin-bottom: 8px
