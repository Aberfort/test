.footer
	padding 0
	position relative
	background-color #212121
	&__address
		color white
		padding 60px 82px
		@media screen and (max-width: 765px)
			width 100%
			background-color black
			padding 60px 60px
	&__title
		color #f2f2f2
		font-size 0.938em
		font-weight 400
		letter-spacing 0.3px
		line-height 24px
	&__main
		font-size 2.125em
		font-weight 300
		letter-spacing 0.1px
		line-height 48px
		@media screen and (max-width: 765px)
			font-size 0.975em
	a
		color: #ffffff
		transition all 0.4s
		&:hover
			color: main
	&__mail
		color white
		text-decoration underline
		transition all 0.4s
		&:hover
			color main
	&__office
		display block
		margin-top 40px
		font-weight 500
		text-transform uppercase
		color white
		transition all 0.4s
		&:hover
			color main
		@media screen and (max-width: 767px)
			&:hover
				color: white
	&__social
		margin-top 20px
		float: right
		svg
			margin-right 40px
			path
				transition all 0.4s
			&:hover
				.cls-1
					fill main
		a
			&:last-child
				svg
					margin-right 0
	&__privacy
		margin-top 20px
		color #9b9b9b
		font-size 0.750em
		float: left
		a
			color white
			transition all 0.4s
			&:hover
				color main
	&__map
		height 600px
		width 100%
		z-index 1
		@media screen and (max-width: 765px)
			display none
