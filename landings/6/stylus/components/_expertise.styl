.expertise
	padding-top: 90px
	padding-bottom: 70px

	&__item
		height: 106px
		&:last-child
			.expertise__desc
				&:after
					display: none

	&__time
		font-size 1.500em
		margin-right: 70px
		position: relative
		display: inline-block
		color #9e9e9e
		font-weight 300
		letter-spacing 0.2px
		line-height 36px
		float: left

	&__desc
		font-size 1.500em
		font-weight 300
		letter-spacing 0.2px
		line-height 36px
		position: relative
		display: inline-block
		&:before
			content: ''
			display: block
			position: absolute
			left: -48px
			top: 10px
			width: 20px
			height: 20px
			border 1px solid #bdbdbd
			border-radius 50%
		&:after
			content: ''
			display: block
			position: absolute
			left: -38px
			top: 36px
			width: 1px
			height: 74px
			background-color: #bdbdbd
		&--blue
			&:before
				border-color #33a1fb

		span
			color #9e9e9e

.comment
	background-color #33a1fb
	border 1px solid #e0e0e0
	padding-top: 200px
	padding-bottom: 195px

	p
		font-size 1.500em
		font-weight 300
		letter-spacing 0.2px
		line-height 36px
		color: #ffffff
		padding-bottom: 75px

	&__logos
		display: block
		float: left
		width: 50%
		height: 42px
		background-image: url('../img/is-logo.png')
		background-position: 50% 50%
		background-size: contain
		background-repeat: no-repeat