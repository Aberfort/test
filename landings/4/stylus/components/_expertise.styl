.expertise
	&__item
		background-color white
		padding 60px 65px
		@media screen and (max-width: 1200px)
			padding 50px 30px
		@media screen and (max-width: 991px)
			padding 40px 10px
		@media screen and (max-width: 767px)
			padding 15px 10px
		&--grey
			background-color #f5f5f5
			@media screen and (max-width: 767px)
				background-color white
		.title
			color main
			font-size 1em
			font-weight 500
			padding-bottom 20px
			text-align center
			@media screen and (max-width: 991px)
				padding-bottom 0
				font-size 1.1em
		.desc
			font-weight 500
			color black
			text-align center
			@media screen and (max-width: 991px)
				font-size 0.9em
			@media screen and (max-width: 767px)
				display none
	&__icon
		width 50px
		height 50px
		display block
		margin 10px auto 20px auto
		position relative
		background-position 50% 50%
		background-size contain
		background-repeat no-repeat
		@media screen and (max-width: 991px)
			margin 10px auto 5px auto
