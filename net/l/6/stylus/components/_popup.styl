.popup
	width 100%
	padding 60px 0
	background-color rgba(0,0,0,0.9)
	position fixed
	z-index 100
	opacity 1
	display: none
	&__menu
		float right
		width 45px
		height 45px
		background-image url('../img/sys/menu_c.svg')
		display: block
		a
			display block
			height 100%
			width 100%
			z-index 10
			cursor pointer
	.fixed
		position fixed
		margin 0 auto
		left 0
		right 0
		z-index 10
	&__navigation
		position relative
		height 100%
		display: block
	ul
		position absolute
		width 100%
		text-align center
		top 50%
		left 50%
		transform translate(-50%,-50%)
		li
			display block
			width 100%
			a
				font-size 1.125em
				text-transform uppercase
				color main
				font-weight 600
				letter-spacing 3px
				transition all 0.4s
				display block
				width 100%
				height 100%
				padding 10px 0
				&:hover
					color white
					background-color rgba(255,255,255,0.1)
	.mobile
		display block
		@media screen and (max-width: 991px)
				display none	


	&__registration
		display: none

		.popup__payment
			position: absolute
			top: 50%
			left: 50%
			transform translate(-50%, -50%)

	&__speaker
		display: none
	&__wrap
		position: absolute
		top: 50%
		left: 50%
		transform translate(-50%, -50%)

		&:nth-child(1)
			.people__image
				background-image: url('../img/people_1.png')

		.name
			color: #ffffff
			font-size 45px
			font-weight 300
			letter-spacing -0.4px
			line-height 60px

		.prof
			color: #ffffff
			font-size 24px
			font-weight 300
			letter-spacing 0.2px
			line-height 36px

		.text
			color white
			font-size 17px
			font-weight 400
			letter-spacing 0.3px
			line-height 30px