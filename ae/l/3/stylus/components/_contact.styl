.contact
	background-color #f5f5f5
	&__wrap
		height 60px
		margin-bottom 20px
		@media screen and (max-width: 991px)
			margin-bottom 10px
		label
			position absolute
			top 8px
			transition all 0.2s
			font-weight 400
			color black
			letter-spacing 0px
			z-index 1
			&.error
				left 14px !important
				top 60px !important
				color red !important
				font-size 12px !important
				display none  !important
		input
			width 100%
			border none
			border 1px solid #e1e1e1
			background-color white
			padding 0
			font-weight 400
			color black !important
			line-height 1
			height 50px
			-webkit-appearance none
			transition all 0.4s
			&.error
				border-color #FF9696
			&:focus
				outline none
				border-color main
			&[placeholder] 
				padding-left 20px
				font-size 14px
				font-weight 400
				color #aeaeae
		textarea
			width 100% !important
			border none
			border 1px solid #e1e1e1
			background-color white
			padding 0
			font-weight 400
			color black !important
			line-height 1
			height 68px !important
			-webkit-appearance none
			transition all 0.4s
			&:focus
				outline none
				border-color main
			&.error
				border-color #FF9696
			&[placeholder] 
				padding-left 20px
				padding-top 14px
				font-size 14px
				font-weight 400
				color #aeaeae
		select
			width 100%
			border none
			border 1px solid #e1e1e1
			background-color white
			padding 0
			font-weight 400
			color black
			line-height 1
			height 50px
			border-radius 0
			color black
			font-size 14px
			font-weight 500
			padding-left 10px
			transition all 0.4s
			&.error
				border-color #FF9696
			&:focus
				outline none
				border-color main
			&:active
				border-color main
			&[placeholder] 
				padding-left 20px
				padding-top 10px
				font-size 14px
				font-weight 500
		&--text
			margin-bottom 50px
			@media screen and (max-width: 991px)
				margin-bottom 20px
	&__agreement
		line-height 44px
		text-align left
		@media screen and (max-width: 991px)
			font-size 11px
		.checkbox
			width 14px
			height 14px
			margin 0
			padding 0
			position absolute
			left 0
			top 50%
			margin-top -7px
			cursor pointer
			z-index 10
			opacity 0
			&:checked + label:before
				background rgba(0, 0, 0, 0) url("../img/sys/check_a.svg") no-repeat
		label
			padding-left 26px
			cursor pointer
			&:before
				display block
				position absolute
				left 15px
				top 50%
				width 22px
				height 22px
				margin-top -11px
				background rgba(0, 0, 0, 0) url("../img/sys/check.svg") no-repeat
				z-index 5
				content ''
	&__complete
		display none
		padding 15vh 0
		text-align center
		width 70%
		margin 0 auto
		font-weight 400