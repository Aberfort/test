.features
	background-color #f5f5f5
	position relative
	&__slogan
		padding-top 60px
		padding-bottom 60px
		@media screen and (max-width: 991px)
			display none
		h2
			font-size 1.625em
			font-weight 300
			text-align center
			span
				font-weight 800
				text-transform uppercase
				color #95733d
				font-size 0.650em
				padding-left 1em
	&__tags
		.left
			h3
				@media screen and (max-width: 991px)
						margin-bottom 30px
			.line
				display block
				height auto
				margin-bottom 30px
				vertical-align middle
				position relative
				img
					display inline
				p
					font-size 0.875em
					text-transform uppercase
					font-weight 800
					display inline-block
					@media screen and (max-width: 991px)
						text-align center
						padding-top 40px
						margin-bottom 20px
					&:before
						content ""
						display block
						background-position 50% 50%
						background-size contain
						width 60px
						height 50px
						float left
						margin 0 20px 0px 0
						@media screen and (max-width: 991px)
							position absolute
							top -20px
							left 50%
							transform translateX(-50%)
							margin 0
				.icon--1
					&:before
						background url("../img/sys/icon_1.svg") no-repeat
						background-position 50% 50%
				.icon--2
					&:before
						background url("../img/sys/icon_3.svg") no-repeat
						background-position 50% 50%
					line-height 50px
					@media screen and (max-width: 1200px)
						line-height 1.6em
				.icon--3
					&:before
						background url("../img/sys/icon_2.svg") no-repeat
						background-position 50% 50%
					
			h3
				font-weight 300
				font-size 1.625em
				color #91713c
				padding-bottom 30px
				line-height 1
				@media screen and (max-width: 991px)
					padding-top 50px
		.right
			h3
				font-weight 300
				font-size 1.625em
				color #91713c
				padding-bottom 50px
				line-height 1
				@media screen and (max-width: 991px)
					padding-top 20px
					padding-bottom 30px
			ul
				li
					font-weight 500
					line-height 2
	&__callto
		background-color #000
		height 200px
		width 100%
		position absolute
		bottom 0
		text-align center
		@media screen and (max-width: 991px)
			position relative
			margin-top 30px
			height auto
			padding-bottom 30px
		@media screen and (max-height: 750px)
			position relative
			margin-top 30px
		p
			font-size 1.250em
			color #fff
			font-weight 500
			text-align center
			padding-top 60px
			padding-bottom 20px
		a.call
			font-size 2em
			font-weight 800
			color #95733d
			text-decoration underline
			transition all 0.4s
			&:hover
				color #fff