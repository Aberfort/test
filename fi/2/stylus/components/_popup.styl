.popup
	width 100%
	padding 60px 0
	background-color black
	position fixed
	z-index 100
	opacity 0.9
	display none
	&__menu
		float right
		width 45px
		height 45px
		background-image url('../img/sys/menu_c.svg')
		a
			display block
			height 100%
			width 100%
			z-index 10
			cursor pointer
	.fixed
		position fixed
		margin 0 auto
		left 0
		right 0
		z-index 10
	&__navigation
		position relative
		height 100%
	ul
		position absolute
		width 100%
		text-align center
		top 50%
		left 50%
		transform translate(-50%,-50%)
		li
			display block
			width 100%
			a
				font-size 1.125em
				text-transform uppercase
				color main
				font-weight 600
				letter-spacing 3px
				transition all 0.4s
				display block
				width 100%
				height 100%
				padding 10px 0
				&:hover
					color white
					background-color rgba(255,255,255,0.1)
	.mobile
		display block
		@media screen and (max-width: 991px)
				display none	
				