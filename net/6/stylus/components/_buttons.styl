.button
	font-weight 700
	color black
	text-transform uppercase
	display inline-block
	width 318px
	line-height 1
	padding: 28px 0
	text-align: center
	border: 3px solid white
	transition all 0.4s
	background-color rgba(255,255,255,0.9)
	font-size: 14px
	letter-spacing: 2.6px
	&:hover
		background-color white
		border-color white
		color main
	&--big
		margin-top 30px
		&:after
			margin-left 30px
	&--submit
		background-color transparent
		color main
		border-color main
		float right
		line-height 36px
		padding-left 70px
		&:after
			background-image url("../img/sys/arrow_c.png")
			margin-left 30px
		&:hover
			background-color main
			color white
			border-color main
			&:after
				background-image url("../img/sys/arrow.png")
		@media screen and (max-width: 991px)
			float none
			margin-top 20px
			margin-bottom pad
