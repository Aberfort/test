.story
	overflow-y hidden
	position relative
	@media screen and (max-width: 991px)
		display none
	@media screen and (max-height 750px)
		margin-bottom 40px
	p.title
		text-align center
		font-size 1.625em
		padding-top 65px
		padding-bottom 35px
	&__tabs
		text-align center
		.tab
			display inline-block
			width calc(100% / 7 - 4px)
			border-bottom 3px solid transparent
			transition all 0.4s
			a
				display block
				width 100%
				height 100%
				color #000
				font-weight 700
				text-transform uppercase
				padding 28px 0
			&--active
				border-bottom 3px solid #97743a
	&__contents
		&:after
			content ""
			width 0
			height 0
			display block
			clear both
			visibility hidden
		p.name
			font-size 2.188em
			font-weight 800
			padding-top 75px
		p.tag
			font-size 0.750em
			font-weight 800
			text-transform uppercase
			color #97743a
			padding-top 58px
			padding-bottom 30px
		p
			font-weight 500
		&__device
			position relative
			width 100%
			height 500px
			background-position 100% 100%
			background-size contain
			background-repeat no-repeat
			z-index 10
	&__carousel
		.owl-stage-outer
			overflow hidden