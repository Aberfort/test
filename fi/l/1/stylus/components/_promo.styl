.promo
	position relative
	// overflow-x hidden
	transition all 0.4s
	&__item
		background-position 50% 50%
		background-size cover
		position relative
		height 85vh
		transition all 0.4s
		@media screen and (max-width: 991px)
			height auto
	&__logo
		margin-top 60px
		position absolute
		@media screen and (max-width: 991px)
			margin-top 20px
			left 50%
			transform translate(-50%, 0)
	&__text
		padding-top 30vh
		@media screen and (max-width: 991px)
			padding-top 120px
			padding-bottom 60px
		h3
			font-size 1.263em
			color #fff
			font-weight 500
		h2
			font-size 3.650em
			color #fff
			font-weight 800
			margin-bottom 32px
			@media screen and (max-width: 1025px) and (min-width: 992px)
				font-size 3em
				margin-bottom 12px
			@media screen and (max-width: 991px)
				font-size 2.2em
		p
			width 70%
			color #fff
			margin-bottom 48px
			@media screen and (max-width: 991px)
				margin 0 auto 30px auto
			@media screen and (max-width: 1025px) and (min-width: 992px)
				margin-bottom 20px
	&__tablet
		position absolute
		right 0
	&__device
		position relative
		width 100%
		height 75vh
		margin-top 15vh
		background-position 50% 100%
		background-size contain
		background-repeat no-repeat
		z-index 10
		transition all 0.4s
		@media screen and (max-width: 991px)
			display none
		@media screen and (max-height 750px)
			height 74vh
	&__tabs
		height 15vh
		background-color #fff
		position absolute
		bottom 0
		width 100%
		z-index 5
		transition all 0.4s
		@media screen and (max-width: 991px)
			display none
		@media screen and (max-height 750px)
			position relative
		.tab
			width 20%
			height 15vh
			float left
			position relative
			z-index 10
			a
				display block
				width 100%
				height 100%
				transition all 0.4s
				border-bottom 3px solid transparent
				img
					transition all 0.6s
			&:hover
				border-bottom 3px solid #000000
				img
					transform translate(-50%,-50%) scale(1.1)
			img
				position absolute
				top 50%
				left 50%
				transform translate(-50%,-50%)
			&--active
				border-bottom 3px solid #000000
				img
					transform translate(-50%,-50%) scale(1.1)
	.owl-controls
		display none
		@media screen and (max-width: 991px)
			display block
			position absolute
			left 0
			right 0
			bottom 0
			margin 0 auto
			background-color #fff
			height 40px
			padding 10px 0