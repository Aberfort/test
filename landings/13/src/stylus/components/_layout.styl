section
	padding pad 0 
	@media screen and (max-width: 767px)
		padding 30px 0
	h2
		font-size 0.875em
		color main
		text-align center
		text-transform uppercase
		font-weight 500
		letter-spacing 1px
		margin-bottom 30px
		@media screen and (max-width: 767px)
			margin-bottom 20px
	h3
		font-size 1.850em
		font-weight 600
		letter-spacing 1px
		color black
		text-align center
		margin-bottom 80px
		&:after
			content ""
			display block
			position relative
			width 60px
			height 3px
			background-color #f57f17
			transition all 0.4s
			margin: 0 auto
			margin-top: 24px
		@media screen and (max-width: 991px)
			margin-bottom 30px

		@media screen and (max-width: 767px)
			font-size: 1.429em
			line-height: 30px
			font-weight: 400

	.delay-05
		animation-delay 0.5s
	.delay-10
		animation-delay 1s
	.delay-15
		animation-delay 1.5s

	.hide-mobile
		@media screen and (max-width: 767px)
			display: none